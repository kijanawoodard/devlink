@model DevLink.Public.Features.InvitationCreation.InvitationCreationController.InviteCommand

@{
    ViewBag.Title = "Invite";
}

@if (ViewData.ModelState.IsValid)
{
    <h2>invite someone.</h2>
}
else
{
    <h2>hmmmm. something went wrong. try again later.</h2>
}

@using (Html.BeginForm())
{
    <label>Full Name</label>
    <input type="text" name="fullname" required autofocus />
    
    <label>Email</label>
    <input type="email" name="email" required />
    
    <label>LinkedIn</label>
    <input type="url" name="linkedin" value="@Model.LinkedIn" required />
    
    <label>GitHub</label>
    <input type="url" name="github" />
    
    <label>Testimonial</label>
    <textarea name="testimonial" required></textarea>
    
    <label>Steps to invite:</label>
    <ol>
        <li>submit this form.</li>
        <li>allow the group to discuss and vote on the candidate.</li>
        <li>if approved by the group, setup a face to face meeting with the candidate.</li>
        <li>tell the candidate about <a href="@Url.Action("Index", "Welcome")">the values of devlink</a>.</li>
        <li>if the candidate accepts, post that fact on the candidate's invite thread.</li>
        <li>the candidate will be sent a welcome email.</li>
    </ol>
    
    <input type="submit" value="Submit Invitation" />
}
