@model DevLink.Public.Features.MemberLogin.MemberLoginCommand
@{
    ViewBag.Title = "login";
    Layout = "~/Features/_Public.cshtml"; 
}

@if (ViewData.ModelState.IsValid)
{
    <h2>hello.</h2>
}
else
{
    <h2>ummmmmm. what?</h2>
}

<form action="@Request.RawUrl" method="post" id="login">
    @Html.AntiForgeryToken()
    
    <label>u:</label>
    <input type="text" name="username" required autofocus value="@Model.UserName" />
    
    <label>p:</label>
    <input type="password" name="password" required />
    
    <input type="submit" value="enter" />
</form>

